{% extends 'forum/base.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('app_forum_category_show', {slug: topic.forum.category.slug}) }}">{{ topic.forum.category.title }}</a>
    </li>
    <li class="breadcrumb-item">
        <a href="{{ path('app_forum_forum_show', {slug: topic.forum.slug}) }}">{{ topic.forum.title }}</a>
    </li>
    <li class="breadcrumb-item">
        <a href="{{ path('app_forum_topic_show', {slug: topic.slug}) }}">{{ topic.title }}</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">Rapport</li> 
{% endblock %}

{% block forum_content %}
    <section class="card" id="message-form">
        <div class="card-header">
            <h3 class="card-title mb-0 h5">Rapport sur un message : <strong>{{ post.title }}</strong></h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-default">Sauvegarder</button> 
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}