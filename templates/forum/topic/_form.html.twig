{% if title is not defined %}
    {% set title = 'Nouveau sujet' %}
{% endif %}
<section class="card" id="message-form">
    <div class="card-header">
        <h3 class="card-title mb-0 h6">{{ title }}</h3>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_rest(form) }}
            <button type="submit" class="btn btn-default">Sauvegarder</button> 
        {{ form_end(form) }}
    </div>
</section>

<script src="{{ asset("assets/ckeditor/ckeditor.js") }}"></script>
<script src="{{ asset("assets/admin/editor.js") }}"></script>
<script>   
    enableBasicEditor("post_content");
</script>