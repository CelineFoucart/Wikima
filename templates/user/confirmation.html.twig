{% extends 'base.html.twig' %}

{% block title %}Renvoyer le mail de confirmation
{% endblock %}

{% block body %}
	<section class="m-5">
		<h2 class="text-center fw-bold mx-3 h3 text-muted">Renvoyer le mail de confirmation</h2>
		<p class="lead text-center">Voulez-vous vraiment renvoyer le mail de confirmation ?</p>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success" role="alert">{{ message }}</div>
		{% endfor %}

		<form action="" method="post">
			<div class="text-center">
				<button type="submit" class="btn btn-default">Envoyez</button>
			</div>
		</form>
	</section>
{% endblock %}
