<article class="card shadow-sm h-100">
	<div class="card-body">
		<h2 class="card-title h5 mb-3">
			<a href="{{ path('app_timeline_show', {slug: timeline.slug}) }}" class="text-decoration-none">
				<i class="fas fa-calendar-alt me-1"></i>
				{{ timeline.title }}
			</a>
		</h2>
		<p class="card-text">{{ timeline.description }}</p>
	</div>
	<div class="card-footer text-muted d-flex justify-content-between align-items-center">
		<span>
			<i class="fas fa-calendar-alt me-1"></i>
			Le {{ timeline.createdAt|date(date_format) }}
		</span>
		{% if is_granted('ROLE_ADMIN') %}
			<a href="{{ path('admin_app_timeline_show', {id: timeline.id}) }}" class="btn btn-sm btn-outline-secondary" data-bs-toggle="tooltip" title="GÃ©rer">
				<i class="fas fa-cogs" ></i>
			</a>
		{% endif %}
	</div>
</article>
