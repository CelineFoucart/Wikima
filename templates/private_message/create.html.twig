{% extends 'private_message/base.html.twig' %}

{% block stylesheets %}
	{{ encore_entry_link_tags('choicejs') }}
{% endblock %}

{% block title %}Nouveau message privé |  {{ parent() }} {% endblock %}
{% block tab_title %}Nouveau message privé{% endblock %}
{% block active_create %}active{% endblock %}

{% block content_tab %}
<div class="m-3">
    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.addressee) }}
        {{ form_row(form.content) }}

        {{ form_rest(form) }}
        <div class="text-center">
            <button type="submit" class="btn btn-default">Envoyer</button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('choicejs') }}
    <script src="{{ asset("assets/plugins/tinymce/tinymce.min.js") }}"></script>
    <script src="{{ asset("assets/editor/editor.js") }}"></script>
    <script>   
        enableBasicEditor("#private_message_content");
    </script>
{% endblock %}