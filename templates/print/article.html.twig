{% extends 'base_print.html.twig' %}

{% block title %}
	{{ article.title }}
{% endblock %}

{% block body %}
	<article>
		<header>
			<p class="meta-data">
				<span>
					Par
					<strong>{{ article.author ? article.author.username : 'Anonyme' }}</strong>
				</span>

				{% if article.type %}
					<strong>{{ article.type.title }}</strong>
				{% endif %}

				<span>
					Publi√© le
					<strong>{{ article.createdAt|date(date_format) }}</strong>
				</span>
			</p>
			<h1>{{ article.title }}</h1>
			<p class="parents">
				{{ portals|join(', ')}}
			</p>
		</header>
		<p>
			{{ article.content|raw }}
		</p>

		{% if article.sections is not empty %}
			<aside style="max-width:450px">
				<p class="summary-title">
					<strong>Sommaire&nbsp;:</strong>
				</p>
				<ol>
					{% for section in article.sections %}
						<li>{{ section.title }}</li>
					{% endfor %}
				</ol>
			</aside>
		{% endif %}


		{% set index = 1 %}
		{% for section in article.sections %}
			<section>
				<h2>{{ index }}. {{ section.title }}</h2>
				{% if section.referencedArticles|length > 0 %}
					<p style="border-bottom: 1px solid #dedede;">
						<strong>Voir aussi :</strong>&nbsp;
						{% for articleReferenced in section.referencedArticles %}
							<a href="{{ absolute_url(path('app_article_show', {slug: articleReferenced.slug})) }}">
							{{ articleReferenced.title }}</a>{{ loop.last != true ? ',' : '' }}
						{% endfor %}
					</p>
				{% endif %}
				<div>{{ section.content|raw }}</div>
			</section>

			{% set index = index + 1 %}
		{% endfor %}

	</article>
{% endblock %}
