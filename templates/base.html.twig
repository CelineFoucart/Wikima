<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}L'encyclop√©die{{ app_name }}{% endblock %}
		</title>
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="{% block description %}Bienvenue sur {{ app_name }} - {{ app_description }} {% endblock %}">
		{{ favicon() }}
		{{ encore_entry_link_tags('base') }}
		{% block stylesheets %}{% endblock %}
	</head>
	<body style="background-color: {{ background_color }}">
		<div class="index-header d-print-none" {{ banner() }}>
			{{ include('includes/_navbar.html.twig') }}
		</div>
		<div id="content-page" class="container shadow mb-3 p-0 rounded-3">
			<main id="content-main" class="p-0 bg-main border-item"> 
				{% block body %}{% endblock %}
			</main>
		</div>
		{{ include('includes/_footer.html.twig') }}

		{{ encore_entry_script_tags('base') }}
		{% block javascripts %}{% endblock %}
	</body>
</html>
