<article class="card shadow-sm h-100">
	<div class="card-body">
		<h2 class="card-title h5 mb-3">
			{% if item.isPrivate %}
				<i class="fas fa-lock" data-bs-toggle="tooltip" title="PrivÃ© (visible uniquement par son auteur et les administrateurs)"></i>
			{% endif %}
			<a href="{{ path('app_article_show', {slug: item.slug}) }}" class="text-decoration-none">
				{{ item.title }}
			</a>
		</h2>
		<p class="card-text">{{ item.description }}</p>
	</div>
	<div class="card-footer text-muted">
		<span class="me-2">
			<i class="fas fa-user me-1"></i>
			{% if item.author is not null %}
				Par
				{{ item.author.username }}
			{% else %}
				Par Anonyme
			{% endif %}
		</span>
		<span>
			<i class="fas fa-calendar-alt me-1"></i>
			Le
			{{ item.createdAt|date(date_format) }}
		</span>
	</div>
</article>
