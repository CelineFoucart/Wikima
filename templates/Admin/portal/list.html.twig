{% extends 'admin_layout.html.twig' %}

{% block title %}Liste des portails{% endblock %}

{% block activeWiki %} active show {% endblock %}
{% block activePortal %}active{% endblock %}

{% block page_title %}Portail{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item active">
        Portail
    </li>
{% endblock %}

{% block toolbar %}
    <a href="{{ path('admin_app_portal_create') }}" class="btn btn-default btn-sm">
        <i class="fas fa-plus-circle" aria-hidden="true"></i>
        Ajouter
    </a>
{% endblock %}

{% block body %}
    <div class="card border-top-primary">
        <div class="card-body card-show">
            <table class="table data-table mb-0 table-striped">
                <thead>
                    <tr>
                        <th class="table-id">Id</th>
                        <th>Titre</th>
                        <th>Slug</th>
                        <th>Catégories</th>
                        <th>Création</th>
                        <th>Mise à jour</th>
                        <th data-orderable="false">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for portal in portals %}
                        <tr>
                            <td>
                                <a href="{{ path('app_portal_show', {slug: portal.slug}) }}" class="fw-bold">{{portal.id }}</a>
                            </td>
                            <td>{{ portal.title }}</td>
                            <td>{{ portal.slug }}</td>
                            <td class="container-list">
                                {% for category in portal.categories %}
                                    <a href="{{ path('admin_app_category_show', {id: category.id}) }}">{{ category }}</a>
                                {% endfor %}
                            </td>
                            <td data-sort="{{ portal.createdAt ? portal.createdAt|date('Y-m-d H:i') : '' }}">
                                {{ portal.createdAt|date(date_format) }}
                            </td>
                            <td data-sort="{{ portal.updatedAt ? portal.updatedAt|date('Y-m-d H:i') : '' }}">
                                {{ portal.updatedAt ? portal.updatedAt|date(date_format) : '' }}
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('app_portal_show', {slug: portal.slug}) }}" class="btn btn-sm btn-default" title="Consulter">
                                        <i class="fas fa-book-reader"></i>
                                    </a>                   
                                    <a href="{{ path('admin_app_portal_show', {id: portal.id}) }}" class="btn btn-sm btn-default" title="Afficher">
                                        <i class="fas fa-eye" aria-hidden="true"></i>
                                    </a>
                                    <a href="{{ path('admin_app_portal_edit', {id: portal.id}) }}" class="btn btn-sm btn-default" title="Éditer">
                                        <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                                    </a>
                                    {% include "Admin/components/_delete_modal.html.twig" with { element: portal, path: 'admin_app_portal_delete' } %}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

