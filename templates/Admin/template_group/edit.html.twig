{% extends 'admin_layout.html.twig' %}

{% block activeTemplate %}active show{% endblock %}
{% block activeTemplateGroup %}active{% endblock %}

{% block title %}Editer "{{ template_group }}"{% endblock %}

{% block page_title %}Editer "{{ template_group }}"{% endblock %}

{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{ path('admin_app_template_group_list') }}" class="text-reset">
			Groupes de modèles
		</a>
	</li>
	<li class="breadcrumb-item active">
		Editer
	</li>
{% endblock %}

{% block toolbar %}
<a class="btn btn-sm btn-default" href="{{ path('admin_app_template_group_create') }}" data-bs-toggle="tooltip" title="Ajouter">
    <i class="fas fa-plus-circle" aria-hidden="true"></i>
</a>
<a class="btn btn-sm btn-default" href="{{ path('admin_app_template_group_list') }}" data-bs-toggle="tooltip" title="Retour à la liste">
    <i class="fas fa-list" aria-hidden="true"></i>
</a>
<div class="btn-group">                
    <a href="{{ path('admin_app_template_group_show', {id: template_group.id}) }}" data-bs-toggle="tooltip" class="btn btn-sm btn-default" title="Afficher">
        <i class="fas fa-info-circle"></i>
    </a>
    <a href="{{ path('admin_app_template_group_edit', {id: template_group.id}) }}" data-bs-toggle="tooltip" class="btn btn-sm btn-default" title="Éditer">
        <i class="fas fa-pencil-alt" aria-hidden="true"></i>
    </a>
    {% include "Admin/components/_delete_modal.html.twig" with { element: template_group, path: 'admin_app_template_group_delete' } %}
</div>
{% endblock %}

{% block body %}
    {{ include('Admin/template_group/_form.html.twig') }}
{% endblock %}
