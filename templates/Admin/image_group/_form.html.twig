{{ form_start(form) }}
    <div class="card border-top-primary">
        <div class="card-header">
            <h2 class="card-title h5 mb-0">Informations</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.title) }}
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.slug) }}
                        <div class="input-group">
                            {{ form_widget(form.slug) }}
                            <span 
                                class="input-group-text" 
                                data-action="slugify" 
                                data-target="#image_group_form_slug" 
                                role="btton" 
                                data-source="#image_group_form_title"
                                data-bs-toggle="tooltip"
                                title="Générer">
                                <i class="fas fa-sync-alt"></i>
                            </span>
                        </div>
                        {{ form_help(form.slug) }}
                        {{ form_errors(form.slug) }}
                    </div>
                </div>
            </div>
            {{ form_row(form.description) }}
            {{ form_row(form.portals) }}
        </div>
    </div>

    {{ form_rest(form) }}
    <div class="card-btn mt-3">
        {% include "Admin/components/_form_btns.html.twig" %}
        {{ form_rest(form) }}
    </div>
{{ form_end(form) }}

