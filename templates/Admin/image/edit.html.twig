{% block page_title %}Editer "{{ image }}"{% endblock %}

{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{ path('admin_app_image_list') }}" class="text-reset">
			Image
		</a>
	</li>
	<li class="breadcrumb-item">
		<a href="{{ path('admin_app_image_show', {id: image.id}) }}" class="text-reset">
