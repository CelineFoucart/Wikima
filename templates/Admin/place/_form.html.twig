{{ form_start(form) }}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-end pe-1">
                {{ form_row(form.isSticky) }}
            </div>
        </div>
        <div class="col-md-8">
            <div class="card border-top-primary">
                <div class="card-header">
                    <h2 class="card-title h5 mb-0">Présentation</h2>
                </div>
                <div class="card-body">
                    {{ form_row(form.title) }}
                    <div class="mb-3">
                        {{ form_label(form.slug) }}
                        <div class="input-group">
                            {{ form_widget(form.slug) }}
                            <span 
                                class="input-group-text" 
                                data-action="slugify" 
                                data-target="#place_form_slug" 
                                role="btton" 
                                data-source="#place_form_title"
                                title="Générer">
                                <i class="fas fa-sync-alt"></i>
                            </span>
                        </div>
                        {{ form_help(form.slug) }}
                        {{ form_errors(form.slug) }}
                    </div>
                    {{ form_row(form.description) }}
                    {{ form_row(form.presentation) }}
                    {{ form_row(form.history) }}                  
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-top-primary">
                <div class="card-header">
                    <h2 class="card-title h5 mb-0">En bref</h2>
                </div>
                <div class="card-body">
                    {{ form_row(form.situation) }} 
                    {{ form_row(form.dominatedBy) }} 
                    {{ form_row(form.capitaleCity) }} 
                    {{ form_row(form.population) }} 
                    {{ form_row(form.languages) }} 
                    {{ form_row(form.size) }} 
                    {{ form_row(form.isInhabitable) }} 
                    {{ form_row(form.imageMap) }}
                </div>
            </div>
            <div class="card border-top-primary mt-3">
                <div class="card-header">
                    <h2 class="card-title h5 mb-0">Relations</h2>
                </div>
                <div class="card-body">
                    {{ form_row(form.localisations) }} 
                    {{ form_row(form.types) }} 
                    {{ form_row(form.categories) }}
                    {{ form_row(form.portals) }}
                </div>
            </div>
        </div>
    </div>

    <div class="card-btn mt-3">
        <button class="btn btn-success btn-sm" type="submit" name="btn_save_and_edit">
            <i class="fas fa-save" aria-hidden="true"></i>
            Enregistrer
        </button>
        <button type="submit" class="btn btn-success btn-sm" name="btn_save_and_list">
            <i class="fas fa-save"></i>
            <i class="fas fa-list" aria-hidden="true"></i>
            Enregistrer et retourner à la liste
        </button>
        <button class="btn btn-success btn-sm" type="submit" name="btn_save_and_create">
            <i class="fas fa-plus-circle" aria-hidden="true"></i>
            Enregistrer et ajouter
        </button>
        {{ form_rest(form) }}
    </div>
{{ form_end(form) }}
