{{ form_start(form) }}
    <div class="row">
        <div class="col-12">
            <div class="d-flex flex-wrap justify-content-end pe-1" style="gap:10px">
                {{ form_row(form.isSticky) }}
                {{ form_row(form.isArchived) }}
            </div>
        </div>
        <div class="col-md-8 mb-2">
            <div class="card border-top-primary">
                <div class="card-header">
                    <h2 class="card-title h5 mb-0">Présentation</h2>
                </div>
                <div class="card-body">
                    {{ form_row(form.title) }}
                    <div class="mb-3">
                        {{ form_label(form.slug) }}
                        <div class="input-group">
                            {{ form_widget(form.slug) }}
                            <span 
                                class="input-group-text" 
                                data-action="slugify" 
                                data-target="#place_form_slug" 
                                role="btton" 
                                data-source="#place_form_title"
                                data-bs-toggle="tooltip"
                                title="Générer">
                                <i class="fas fa-sync-alt"></i>
                            </span>
                        </div>
                        {{ form_help(form.slug) }}
                        {{ form_errors(form.slug) }}
                    </div>
                    {{ form_row(form.description) }}
                    {{ form_row(form.presentation) }}
                    {{ form_row(form.history) }}                  
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-top-primary">
                <div class="card-header">
                    <h2 class="card-title h5 mb-0">En bref</h2>
                </div>
                <div class="card-body">
                    {{ form_row(form.situation) }} 
                    {{ form_row(form.dominatedBy) }} 
                    {{ form_row(form.capitaleCity) }} 
                    {{ form_row(form.population) }} 
                    {{ form_row(form.languages) }} 
                    {{ form_row(form.size) }} 
                    {{ form_row(form.isInhabitable) }} 
                    {{ form_row(form.imageMap) }}
                </div>
            </div>
            <div class="card border-top-primary mt-3">
                <div class="card-header">
                    <h2 class="card-title h5 mb-0">Relations</h2>
                </div>
                <div class="card-body">
                    {{ form_row(form.localisations) }} 
                    {{ form_row(form.types) }} 
                    {{ form_row(form.categories) }}
                    {{ form_row(form.portals) }}
                    {{ form_row(form.imageGroup) }}
                </div>
            </div>
        </div>
    </div>

    <div class="card-btn mt-3">
        {% include "Admin/components/_form_btns.html.twig" %}
        {{ form_rest(form) }}
    </div>
{{ form_end(form) }}

<script src="{{ asset("assets/ckeditor/ckeditor.js") }}"></script>
<script src="{{ asset("assets/admin/editor.js") }}"></script>
<script>   
    enableFullEditor("place_form_presentation", "p;h3;h4;h5;h6;pre;address;div");
    enableFullEditor("place_form_description", "p;h3;h4;h5;h6;pre;address;div");
    enableFullEditor("place_form_history", "p;h3;h4;h5;h6;pre;address;div");
</script>
