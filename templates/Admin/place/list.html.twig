{% extends 'admin_layout.html.twig' %}

{% block title %}Liste des lieux{% endblock %}

{% block activePlace %} active show {% endblock %}
{% block activePlaceList %}active{% endblock %}

{% block page_title %}Lieu{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item active">
        Lieu
    </li>
{% endblock %}

{% block toolbar %}
    <a href="{{ path('admin_app_place_create') }}" class="btn btn-default btn-sm">
        <i class="fas fa-plus-circle" aria-hidden="true"></i>
        Ajouter
    </a>
{% endblock %}

{% block body %}
    <div class="card border-top-primary">
        <div class="card-body card-show">
            <table class="table data-table mb-0 table-striped">
                <thead>
                    <tr>
                        <th class="table-id">Id</th>
                        <th>Nom</th>
                        <th>Slug</th>
                        <th>Type</th>
                        <th data-orderable="false">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for place in places %}
                        <tr>
                            <td>
                                <a href="{{ path('app_place_show', {slug: place.slug}) }}" class="fw-bold">{{place.id }}</a>
                            </td>
                            <td>{{ place.title }}</td>
                            <td>{{ place.slug }}</td>
                            <td>{{ place.types|join(', ') }}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('app_place_show', {slug: place.slug}) }}" class="btn btn-sm btn-default" title="Consulter">
                                        <i class="fas fa-book-reader"></i>
                                    </a>                   
                                    <a href="{{ path('admin_app_place_show', {id: place.id}) }}" class="btn btn-sm btn-default" title="Afficher">
                                        <i class="fas fa-eye" aria-hidden="true"></i>
                                    </a>
                                    <a href="{{ path('admin_app_place_image', {id: place.id}) }}" class="btn btn-sm btn-default" title="Gérer l'image">
                                        <i class="fas fa-image"></i>
                                    </a>
                                    <a href="{{ path('admin_app_place_edit', {id: place.id}) }}" class="btn btn-sm btn-default" title="Éditer">
                                        <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                                    </a>
                                    {% include "Admin/components/_delete_modal.html.twig" with { element: place, path: 'admin_app_place_delete' } %}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

