
{{ form_start(form) }}
    <div class="row">
        <div class="col-12">
            <div class="d-flex flex-wrap justify-content-end pe-1" style="gap:10px">
                {{ form_row(form.isSticky) }}
                {{ form_row(form.isDraft) }}
                {{ form_row(form.isPrivate) }}
                {{ form_row(form.isArchived) }}
            </div>
        </div>
        <div class="col-md-8 mb-2">
            <div class="card border-top-primary">
                <div class="card-header">
                    <h3 class="card-title h5 mb-0">Contenu</h3>
                </div>
                <div class="card-body">
                    {{ form_row(form.title) }}
                    {{ form_row(form.type) }}
                    {{ form_row(form.content) }}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-top-primary">
                <div class="card-header">
                    <h3 class="card-title h5 mb-0">Méta données</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        {{ form_label(form.slug) }}
                        <div class="input-group">
                            {{ form_widget(form.slug) }}
                            <span 
                                class="input-group-text" 
                                data-action="slugify" 
                                data-target="#article_form_slug" 
                                role="btton" 
                                data-source="#article_form_title"
                                title="Générer">
                                <i class="fas fa-sync-alt"></i>
                            </span>
                        </div>
                        {{ form_help(form.slug) }}
                        {{ form_errors(form.slug) }}
                    </div>
                    {{ form_row(form.keywords) }}
                    {{ form_row(form.description) }}
                    {{ form_row(form.portals) }}
                </div>
            </div>
        </div>
    </div>
    <div class="card-btn mt-3">
        <button class="btn btn-success btn-sm" type="submit" name="btn_save_and_edit">
            <i class="fas fa-save" aria-hidden="true"></i>
            Enregistrer
        </button>
        <button class="btn btn-success btn-sm" type="submit" name="btn_save_and_section">
            <i class="fas fa-save" aria-hidden="true"></i>
            Enregistrer et gérer
        </button>
        <button type="submit" class="btn btn-success btn-sm" name="btn_save_and_list">
            <i class="fas fa-save"></i>
            <i class="fas fa-list" aria-hidden="true"></i>
            Enregistrer et retourner à la liste
        </button>
        <button class="btn btn-success btn-sm" type="submit" name="btn_save_and_create">
            <i class="fas fa-plus-circle" aria-hidden="true"></i>
            Enregistrer et ajouter
        </button>
        {{ form_rest(form) }}
    </div>
{{ form_end(form) }}

{% include "Admin/components/_editor.html.twig" with {target_id: 'article_form_content'} %}