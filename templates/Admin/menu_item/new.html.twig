{% extends 'admin_layout.html.twig' %}

{% block activeSetting %}active show{% endblock %}
{% block activeMenu %} active {% endblock %}
{% block title %}Créer un élément de menu{% endblock %}
{% block page_title %}Créer un élément de menu{% endblock %}

{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{ path('admin_app_menu_item_list') }}" class="text-reset">
			Eléments de menu
		</a>
	</li>
	<li class="breadcrumb-item active">
		Créer
	</li>
{% endblock %}

{% block toolbar %}
    {% include 'Admin/components/_toolbar.html.twig' with { prefix: 'menu_item', entity: null } %}
{% endblock %}

{% block body %}
	{% if total < limit %}
		{{ include('Admin/menu_item/_form.html.twig') }}
	{% else %}
		<div class="card delete-modal">
			<div class="card-header">
				<h2 class="card-title h5 mb-0 text-danger fw-bold"><i class="fas fa-exclamation-triangle me-1"></i> Action impossible</h2>
			</div>
			<div class="card-body text-danger">
				Vous avez déjà créé <strong>{{ limit }}</strong> éléments de menu. Veuillez en supprimer un avant d'en créer un autre. 
			</div>
		</div>
	{% endif %}
{% endblock %}
