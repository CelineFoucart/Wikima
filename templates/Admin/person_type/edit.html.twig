{% extends 'admin_layout.html.twig' %}

{% block title %}Editer "{{ personType }}"{% endblock %}

{% block activePerson %}
	active show
{% endblock %}

{% block activePersonType %}active {% endblock %}

{% block page_title %}Editer "{{ personType }}"{% endblock %}

{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{ path('admin_app_persontype_list') }}" class="text-reset">
			Types de personnage
		</a>
	</li>
	<li class="breadcrumb-item active">
		Editer
	</li>
{% endblock %}

{% block toolbar %}
    <a class="btn btn-sm btn-default" href="{{ path('admin_app_persontype_create') }}" data-bs-toggle="tooltip" title="Ajouter">
        <i class="fas fa-plus-circle" aria-hidden="true"></i>
    </a>
    <div class="btn-group">
        <a href="{{ path('app_person_type', {slug: personType.slug}) }}" data-bs-toggle="tooltip" class="btn btn-sm btn-default" title="Consulter">
            <i class="fas fa-book-reader"></i>
        </a>             
        <a href="{{ path('admin_app_persontype_show', {id: personType.id}) }}" data-bs-toggle="tooltip" class="btn btn-sm btn-default" title="Afficher">
            <i class="fas fa-info-circle"></i>
        </a>
        <a href="{{ path('admin_app_persontype_edit', {id: personType.id}) }}" data-bs-toggle="tooltip" class="btn btn-sm btn-default" title="Ã‰diter">
            <i class="fas fa-pencil-alt" aria-hidden="true"></i>
        </a>
        {% include "Admin/components/_delete_modal.html.twig" with { element: personType, path: 'admin_app_persontype_delete' } %}
    </div>
{% endblock %}

