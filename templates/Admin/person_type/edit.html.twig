{% extends 'admin_layout.html.twig' %}

{% block title %}Editer "{{ personType }}"{% endblock %}

{% block activePerson %}
	active show
{% endblock %}

{% block activePersonType %}active {% endblock %}

{% block page_title %}Editer "{{ personType }}"{% endblock %}

{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{ path('admin_app_persontype_list') }}" class="text-reset">
			Types de personnage
		</a>
	</li>
	<li class="breadcrumb-item active">
		{{ personType }}
	</li>
{% endblock %}

{% block toolbar %}
	<div class="dropdown d-inline">
        <button class="btn btn-default btn-sm dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Action
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_persontype_create') }}">
                    <i class="fas fa-plus-circle" aria-hidden="true"></i>
                    Ajouter
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('app_person_type', {slug: personType.slug}) }}">
                    <i class="fas fa-book-reader"></i>
                    Consulter
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_persontype_show', {id: personType.id}) }}">
                    <i class="fas fa-eye"></i>
                    Afficher
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_persontype_list') }}">
                    <i class="fas fa-list" aria-hidden="true"></i>
                    Retour Ã  la liste
                </a>
            </li>
        </ul>
    </div>
    {% include "Admin/components/_delete_modal.html.twig" with { element: personType, path: 'admin_app_persontype_delete', full: true } %}
{% endblock %}

{% block body %}
	{% include "Admin/person_type/_form.html.twig" %}
{% endblock %}
