{% extends 'admin_layout.html.twig' %}

{% block title %}Afficher "{{ personType }}"{% endblock %}

{% block activePerson %}
	active show
{% endblock %}

{% block activePersonType %}active {% endblock %}

{% block page_title %}Afficher "{{ personType }}"{% endblock %}

{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{ path('admin_app_persontype_list') }}" class="text-reset">
			Types de personnage
		</a>
	</li>
	<li class="breadcrumb-item active">
		Voir
	</li>
{% endblock %}

{% block toolbar %}
    {% include 'Admin/components/_toolbar.html.twig' with { prefix: 'persontype', entity: personType, show_route: 'app_person_type' } %}
{% endblock %}

{% block body %}
	<div class="card border-top-primary">
        <div class="card-header bg-white">
            <h2 class="card-title h5 mb-0">{{ personType }}</h2>
        </div>
        <div class="card-body card-show">
            <table class="table table-striped mb-0">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ personType.id }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ personType.title }}</td>
                    </tr>
                    <tr>
                        <th>Slug</th>
                        <td>{{ personType.slug }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ personType.description|nl2br }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
	</div>
{% endblock %}
