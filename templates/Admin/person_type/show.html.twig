{% extends 'admin_layout.html.twig' %}

{% block title %}Afficher "{{ personType }}"{% endblock %}

{% block activePerson %}
	active show
{% endblock %}

{% block activePersonType %}active {% endblock %}

{% block page_title %}Afficher "{{ personType }}"{% endblock %}

{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{ path('admin_app_persontype_list') }}" class="text-reset">
			Types de personnage
		</a>
	</li>
	<li class="breadcrumb-item active">
		{{ personType }}
	</li>
{% endblock %}

{% block toolbar %}
	<div class="dropdown">
        <button class="btn btn-default btn-sm dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Action
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_persontype_create') }}">
                    <i class="fas fa-plus-circle" aria-hidden="true"></i>
                    Ajouter
                </a>
            </li><li>
                <a class="dropdown-item" href="{{ path('app_person_type', {slug: personType.slug}) }}">
                    <i class="fas fa-book-reader"></i>
                    Consulter
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_persontype_edit', {id: personType.id}) }}">
                    <i class="fas fa-edit" aria-hidden="true"></i>
                    Editer
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_persontype_show', {id: personType.id}) }}">
                    <i class="fas fa-eye"></i>
                    Afficher
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_persontype_list') }}">
                    <i class="fas fa-list" aria-hidden="true"></i>
                    Retour Ã  la liste
                </a>
            </li>
        </ul>
    </div>
{% endblock %}

{% block body %}
	<div class="card border-top-primary">
        <div class="card-header bg-white">
            <h2 class="card-title h5 mb-0">{{ personType }}</h2>
        </div>
        <div class="card-body card-show">
            <table class="table table-striped mb-0">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ personType.id }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ personType.title }}</td>
                    </tr>
                    <tr>
                        <th>Slug</th>
                        <td>{{ personType.slug }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ personType.description|nl2br }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
	</div>
{% endblock %}
