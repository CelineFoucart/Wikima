{% extends 'admin_layout.html.twig' %}

{% block title %}Editer "{{ category }}"{% endblock %}

{% block activeWiki %}active show{% endblock %}
{% block activeCategory %}active{% endblock %}

{% block page_title %}Editer "{{ category }}"{% endblock %}

{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{ path('admin_app_category_list') }}" class="text-reset">
			Catégorie
		</a>
	</li>
	<li class="breadcrumb-item active">
		{{ category }}
	</li>
{% endblock %}

{% block toolbar %}
	<div class="dropdown d-inline">
        <button class="btn btn-default btn-sm dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Action
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_category_create') }}">
                    <i class="fas fa-plus-circle" aria-hidden="true"></i>
                    Ajouter
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('app_category_show', {slug: category.slug}) }}">
                    <i class="fas fa-book-reader"></i>
                    Consulter
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_category_sort', {id: category.id}) }}">
                    <i class="fas fa-sort-amount-down-alt"></i>
                    Ordonner
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_category_show', {id: category.id}) }}">
                    <i class="fas fa-eye"></i>
                    Afficher
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_category_list') }}">
                    <i class="fas fa-list" aria-hidden="true"></i>
                    Retour à la liste
                </a>
            </li>
        </ul>
    </div>
    {% include "Admin/components/_delete_modal.html.twig" with { element: category, path: 'admin_app_category_delete', full: true } %}
{% endblock %}

{% block body %}
	{% include "Admin/category/_form.html.twig" %}
{% endblock %}
