{{ form_start(form) }}
    <div class="row g-3">
        <div class="col-12">
            <section class="card border-top-primary">
                <div class="card-header">
                    <h2 class="card-title h5 mb-0">Contenu</h2>
                </div>
                <div class="card-body">
                    {{ form_row(form.title) }}
                    {{ form_row(form.content) }}
                </div>
            </section>
        </div>
        <div class="col-md-6">
            <section class="card border-top-primary">
                <div class="card-header">
                    <h3 class="card-title h5 mb-0">Référencement</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        {{ form_label(form.slug) }}
                        <div class="input-group">
                            {{ form_widget(form.slug) }}
                            <span 
                                class="input-group-text" 
                                data-action="slugify" 
                                data-target="#page_form_slug" 
                                role="btton" 
                                data-source="#page_form_title"
                                data-bs-toggle="tooltip"
                                title="Générer">
                                <i class="fas fa-sync-alt"></i>
                            </span>
                        </div>
                        {{ form_help(form.slug) }}
                        {{ form_errors(form.slug) }}
                    </div>
                    {{ form_row(form.description) }}
                </div>
            </section>
        </div>
        <div class="col-md-6">
            <section class="card border-top-primary">
                <div class="card-header">
                    <h2 class="card-title h5 mb-0">Relations</h2>
                </div>
                <div class="card-body">
                    {{ form_row(form.portals) }}
                    {{ form_row(form.categories) }}
                    {{ form_rest(form) }}
                </div>
            </section>
        </div>
    </div>
    <div class="card-btn mt-3">
        {% include "Admin/components/_form_btns.html.twig" %}
    </div>
{{ form_end(form) }}

<script src="{{ asset("assets/plugins/tinymce/tinymce.min.js") }}"></script>
<script src="{{ asset("assets/editor/editor.js") }}"></script>
<script>   
    enableFullEditor("page_form_content");
</script>
