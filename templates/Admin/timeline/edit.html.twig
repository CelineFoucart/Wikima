{% extends 'admin_layout.html.twig' %}

{% block title %}Editer "{{ timeline }}"{% endblock %}

{% block activeWiki %}active show{% endblock %}
{% block activeTimeline %}active{% endblock %}

{% block page_title %}Editer "{{ timeline }}"{% endblock %}

{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{ path('admin_app_timeline_list') }}" class="text-reset">
			Chronologie
		</a>
	</li>
	<li class="breadcrumb-item">
		<a href="{{ path('admin_app_timeline_show', {id: timeline.id}) }}" class="text-reset">
			{{ timeline }}
		</a>
	</li>
	<li class="breadcrumb-item active">
		Editer
	</li>
{% endblock %}

{% block toolbar %}
	<div class="dropdown d-inline">
        <button class="btn btn-default btn-sm dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Action
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_timeline_create') }}">
                    <i class="fas fa-plus-circle" aria-hidden="true"></i>
                    Ajouter
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('app_timeline_show', {slug: timeline.slug}) }}">
                    <i class="fas fa-book-reader"></i>
                    Consulter
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_timeline_show', {id: timeline.id}) }}">
                    <i class="fas fa-eye"></i>
                    Afficher
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_timeline_event', {id: timeline.id}) }}">
                    <i class="fas fa-calendar" aria-hidden="true"></i>
                    Evénements
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_timeline_list') }}">
                    <i class="fas fa-list" aria-hidden="true"></i>
                    Retour à la liste
                </a>
            </li>
        </ul>
    </div>
    {% include "Admin/components/_delete_modal.html.twig" with { element: timeline, path: 'admin_app_timeline_delete', full: true } %}
{% endblock %}

{% block body %}
	{% include "Admin/timeline/_form.html.twig" %}
{% endblock %}
