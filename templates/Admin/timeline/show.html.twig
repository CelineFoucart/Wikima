{% extends 'admin_layout.html.twig' %}

{% block title %}Afficher "{{ timeline }}"{% endblock %}

{% block activeWiki %}active show{% endblock %}
{% block activeTimeline %}active{% endblock %}

{% block page_title %}Afficher "{{ timeline }}"{% endblock %}

{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{ path('admin_app_timeline_list') }}" class="text-reset">
			Chronologies
		</a>
	</li>
	<li class="breadcrumb-item active">
		Voir
	</li>
{% endblock %}

{% block toolbar %}
    {% include 'Admin/components/_toolbar.html.twig' with { prefix: 'timeline', entity: timeline, show_route: 'app_timeline_show'  } %}
{% endblock %}

{% block body %}
    <div {{ vue_component('admin/timeline/TimelineShow', { 'id': timeline.id, dateFormat: date_format }) }}></div>
{% endblock %}
