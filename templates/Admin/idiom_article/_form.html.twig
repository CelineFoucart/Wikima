
{{ form_start(form) }}
    <div class="card border-top-primary">
        <div class="card-header">
            <div class="float-end">
                <a href="{{ path('admin_app_idiom_article', {id: idiom.id }) }}" class="btn btn-primary btn-sm btn-sm">
                    <i class="fas fa-arrow-left"></i>
                    <span class="d-none d-sm-inline">Retour</span>
                </a>
                {% if article.id is not null %}
                    <a href="{{ path('admin_app_idiom_article_gallery', {id: article.id}) }}" class="btn btn-sm btn-primary" data-bs-toggle="tooltip" title="Galerie">
                        <i class="fas fa-image" aria-hidden="true"></i> 
                    <span class="d-none d-sm-inline">Galerie</span>
                    </a>
                    <a href="{{ path('app_idiom_show_article', {article: article.slug, idiom: article.idiom.slug}) }}" class="btn btn-sm btn-primary" data-bs-toggle="tooltip" title="Galerie">
                        <i class="fas fa-book-reader" aria-hidden="true"></i> 
                    <span class="d-none d-sm-inline">Consulter</span>
                    </a>
                {% endif %}
            </div>
            <h3 class="card-title h5 mb-0">{{ article }}</h3>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-12">
                    <h3 class="h5 mb-0">Contenu</h3>
                    <fieldset class="form-group p-3 border bg-light">
                        {{ form_row(form.title) }}
                        {{ form_row(form.category) }}
                        {{ form_row(form.content) }}
                    </fieldset>
                </div>
                <div class="col-12">
                    <h3 class="h5 mb-0">Référencement</h3>
                    <fieldset class="form-group p-3 border bg-light">
                        <div class="mb-3">
                            {{ form_label(form.slug) }}
                            <div class="input-group">
                                {{ form_widget(form.slug) }}
                                <span 
                                    class="input-group-text" 
                                    data-action="slugify" 
                                    data-target="#idiom_article_slug" 
                                    role="btton" 
                                    data-source="#idiom_article_title"
                                    title="Générer">
                                    <i class="fas fa-sync-alt"></i>
                                </span>
                            </div>
                            {{ form_help(form.slug) }}
                            {{ form_errors(form.slug) }}
                        </div>
                        {{ form_row(form.description) }}
                    </fieldset>
                </div>
            </div>
            
        </div>
    </div>
    <div class="card-btn mt-3">
        {% include "Admin/components/_form_btns.html.twig" %}
        {{ form_rest(form) }}
    </div>
{{ form_end(form) }}

<script src="{{ asset("assets/plugins/tinymce/tinymce.min.js") }}"></script>
<script src="{{ asset("assets/editor/editor.js") }}"></script>
<script>   
    enableFullEditor("idiom_article_content");
</script>
