{% extends 'Admin/forum_category/base.html.twig' %}

{% block title %}Gérer un forum{% endblock %}

{% block page_title %}Gérer un forum{% endblock %}

{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{ path('admin_app_forum_category_list') }}" class="text-reset">
			Catégories de forum
		</a>
	</li>
    <li class="breadcrumb-item">
		<a href="{{ path('admin_app_forum_category_show', {id: forum.category.id}) }}" class="text-reset">
			{{ forum.category }}
		</a>
	</li>
	<li class="breadcrumb-item active">
		{{ forum }}
	</li>
{% endblock %}

{% block toolbar %}
{% include 'Admin/forum_category/_toolbar.html.twig' %}
{% endblock %}

