{{ form_start(form) }}
    <div class="card border-top-primary">
        <div class="card-header">
            <h2 class="card-title h5 mb-0">Note</h2>
        </div>
        <div class="card-body">
            {{ form_row(form.title) }}
            {{ form_row(form.message) }}
            {{ form_row(form.portal) }}
            {{ form_row(form.category) }}
            {{ form_row(form.isProcessed) }}
            {{ form_rest(form) }}
        </div>
        <div class="card-footer">
            <button class="btn btn-success btn-sm" type="submit" name="btn_save_and_edit">
                <i class="fas fa-save" aria-hidden="true"></i>
                <span class="d-none d-sm-inline">Enregistrer</span>
            </button>

            {% set referer = referer is defined ? referer : null %}
            {% if referer == false  %}
                <button type="submit" class="btn btn-success btn-sm" name="btn_save_and_list">
                    <i class="fas fa-save"></i>
                    <i class="fas fa-list" aria-hidden="true"></i>
                    <span class="d-none d-sm-inline">Enregistrer et retourner Ã  la liste</span>
                </button>
                <button class="btn btn-success btn-sm" type="submit" name="btn_save_and_create">
                    <i class="fas fa-plus-circle" aria-hidden="true"></i>
                    <span class="d-none d-sm-inline">Enregistrer et ajouter</span>
                </button>
            {% endif %}
        </div>
    </div>
{{ form_end(form) }}

<script src="{{ asset("assets/ckeditor/ckeditor.js") }}"></script>
<script src="{{ asset("assets/admin/editor.js") }}"></script>
<script>   
    enableBasicEditor("note_form_message");
</script>
