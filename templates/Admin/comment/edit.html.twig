{% extends 'admin_layout.html.twig' %}

{% block title %}Editer un commentaire{% endblock %}
{% block activeAdmin %}active show{% endblock %}
{% block activeComment %} active {% endblock %}
{% block page_title %}Editer un commentaire{% endblock %}

{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{ path('admin_app_comment_list') }}" class="text-reset">
			Commentaires
		</a>
	</li>
	<li class="breadcrumb-item active">
		Editer
	</li>
{% endblock %}

{% block toolbar %}
	{% include "Admin/comment/_toolbar.html.twig" %}
{% endblock %}

{% block body %}
	{{ form_start(form) }}
        <div class="card border-top-primary">
            <div class="card-header">
                <h2 class="card-title h5 mb-0">{{ comment }}</h2>
            </div>
            <div class="card-body">
                {{ form_row(form.content) }}
                {{ form_row(form.author) }}
            </div>
            <div class="card-footer">
                {{ form_rest(form) }}
                <button class="btn btn-success btn-sm" type="submit" name="btn_save_and_edit">
                    <i class="fas fa-save" aria-hidden="true"></i>
                    Enregistrer
                </button>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("assets/ckeditor/ckeditor.js") }}"></script>
    <script src="{{ asset("assets/admin/editor.js") }}"></script>
    <script>   
        enableBasicEditor("comment_form_content");
    </script>
{% endblock %}
