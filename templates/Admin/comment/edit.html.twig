{% extends 'admin_layout.html.twig' %}

{% block title %}Editer un commentaire{% endblock %}
{% block activeAdmin %}active show{% endblock %}
{% block activeComment %} active {% endblock %}
{% block page_title %}Editer un commentaire{% endblock %}

{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{ path('admin_app_comment_list') }}" class="text-reset">
			Commentaire
		</a>
	</li>
	<li class="breadcrumb-item active">
		{{ comment }}
	</li>
{% endblock %}

{% block toolbar %}
	<div class="dropdown d-inline">
        <button class="btn btn-default btn-sm dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Action
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_comment_show', {id: comment.id}) }}">
                    <i class="fas fa-eye"></i>
                    Afficher
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_comment_list') }}">
                    <i class="fas fa-list" aria-hidden="true"></i>
                    Retour Ã  la liste
                </a>
            </li>
        </ul>
    </div>
    {% include "Admin/components/_delete_modal.html.twig" with { element: comment, path: 'admin_app_comment_delete', full: true } %}
{% endblock %}

{% block body %}
	{{ form_start(form) }}
        <div class="card border-top-primary">
            <div class="card-header">
                <h2 class="card-title h5 mb-0">{{ comment }}</h2>
            </div>
            <div class="card-body">
                {{ form_row(form.content) }}
                {{ form_row(form.author) }}
            </div>
            <div class="card-footer">
                {{ form_rest(form) }}
                <button class="btn btn-success btn-sm" type="submit" name="btn_save_and_edit">
                    <i class="fas fa-save" aria-hidden="true"></i>
                    Enregistrer
                </button>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
