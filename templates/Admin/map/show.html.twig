{% extends 'admin_layout.html.twig' %}

{% block title %}Afficher "{{ map }}"{% endblock %}
{% block activePlace %} active show {% endblock %}
{% block activeMap %}active{% endblock %}
{% block page_title %}{{ map }}{% endblock %}

{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{ path('admin_app_map_list') }}" class="text-reset">Cartes</a>
	</li>
	<li class="breadcrumb-item active">
		Voir
	</li>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8">
            <article class="card border-top-primary">
                <div class="card-header bg-white">
                    <h2 class="card-title h5 mb-0">Informations générales</h2>
                </div>
                <div class="card-body card-show">
                    <table class="table table-striped mb-0">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ map.id }}</td>
                            </tr>
                            <tr>
                                <th>Titre</th>
                                <td>{{ map.title  }}</td>
                            </tr>
                            <tr>
                                <th>Slug</th>
                                <td>{{ map.slug }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ map.description|raw }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </article>
        </div>
        <div class="col-md-4">
            <article class="card border-top-primary">
                <div class="card-header bg-white">
                    <h2 class="card-title h5 mb-0">Méta-données et relations</h2>
                </div>
                <div class="card-body card-show">
                    <table class="table table-striped mb-0">
                        <tbody>
                            <tr>
                                <th>Création</th>
                                <td>{{ map.createdAt|date(date_format) }}</td>
                            </tr>
                            <tr>
                                <th>Mise à jour</th>
                                <td>{{ map.updatedAt ? map.updatedAt|date(date_format) : '' }}</td>
                            </tr>
                            <tr>
                                <th>Catégories</th>
                                <td>
                                    {% if map.categories is not empty %}
                                        <ul>
                                            {% for category in map.categories %}
                                                <li>
                                                    <a href="{{ path('admin_app_category_show', {id: category.id}) }}">
                                                        {{ category.title }}
                                                    </a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>Portails</th>
                                <td>
                                    {% if map.portals is not empty %}
                                        <ul>
                                            {% for portal in map.portals %}
                                                <li>
                                                    <a href="{{ path('admin_app_portal_show', {id: map.id}) }}">
                                                        {{ map.title }}
                                                    </a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </article>
        </div>
    </div>
    
{% endblock %}

{% block toolbar %}
    {% include 'Admin/components/_toolbar.html.twig' with { prefix: 'map', entity: map, show_route: 'app_map_show'  } %}
{% endblock %}