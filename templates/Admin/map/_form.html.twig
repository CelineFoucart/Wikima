{{ form_start(form) }}
    <div class="card border-top-primary">
        <div class="card-header">
            <h2 class="card-title h5 mb-0">
                Carte
                {% if map.image is not null %}
                    à partir de l'image <a href="{{ path('admin_app_image_show', {id: map.image.id}) }}">{{ map.image }}</a>
                {% endif %}
            </h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.title) }}
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.slug) }}
                        <div class="input-group">
                            {{ form_widget(form.slug) }}
                            <span 
                                class="input-group-text" 
                                data-action="slugify" 
                                data-target="#map_form_slug" 
                                role="btton" 
                                data-source="#map_form_title"
                                data-bs-toggle="tooltip"
                                title="Générer">
                                <i class="fas fa-sync-alt"></i>
                            </span>
                        </div>
                        {{ form_help(form.slug) }}
                        {{ form_errors(form.slug) }}
                    </div>
                </div>
            </div>
            {{ form_row(form.categories) }}
            {{ form_row(form.portals) }}
            {{ form_row(form.description) }}
        </div>
    </div>

    <div class="card-btn mt-3">
        {% include "Admin/components/_form_btns.html.twig" %}
        {{ form_rest(form) }}
    </div>
{{ form_end(form) }}
