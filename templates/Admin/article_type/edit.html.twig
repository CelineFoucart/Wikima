{% extends 'admin_layout.html.twig' %}

{% block title %}Editer "{{ articleType }}"{% endblock %}

{% block activeWiki %}
	active show
{% endblock %}

{% block activeArticleType %}active {% endblock %}

{% block page_title %}Editer "{{ articleType }}"{% endblock %}

{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{ path('admin_app_articletype_list') }}" class="text-reset">
			Types d'article
		</a>
	</li>
	<li class="breadcrumb-item active">
		{{ articleType }}
	</li>
{% endblock %}

{% block toolbar %}
    <a class="btn btn-sm btn-default" href="{{ path('admin_app_articletype_create') }}" data-bs-toggle="tooltip" title="Ajouter">
        <i class="fas fa-plus-circle" aria-hidden="true"></i>
    </a>
    <div class="btn-group">
        <a href="{{ path('app_articletype_show', {slug: articleType.slug}) }}" data-bs-toggle="tooltip" class="btn btn-sm btn-default" title="Consulter">
            <i class="fas fa-book-reader"></i>
        </a>                   
        <a href="{{ path('admin_app_articletype_show', {id: articleType.id}) }}" data-bs-toggle="tooltip" class="btn btn-sm btn-default" title="Afficher">
            <i class="fas fa-info-circle"></i>
        </a>
        <a href="{{ path('admin_app_articletype_edit', {id: articleType.id}) }}" data-bs-toggle="tooltip" class="btn btn-sm btn-default" title="Ã‰diter">
            <i class="fas fa-pencil-alt" aria-hidden="true"></i>
        </a>
        {% include "Admin/components/_delete_modal.html.twig" with { element: articleType, path: 'admin_app_articletype_delete' } %}
    </div>
{% endblock %}

{% block body %}
	{% include "Admin/article_type/_form.html.twig" %}
{% endblock %}
