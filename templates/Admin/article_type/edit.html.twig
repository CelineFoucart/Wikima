{% extends 'admin_layout.html.twig' %}

{% block title %}Editer "{{ articleType }}"{% endblock %}

{% block activeWiki %}
	active show
{% endblock %}

{% block activeArticleType %}active {% endblock %}

{% block page_title %}Editer "{{ articleType }}"{% endblock %}

{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{ path('admin_app_articletype_list') }}" class="text-reset">
			Types d'article
		</a>
	</li>
	<li class="breadcrumb-item active">
		{{ articleType }}
	</li>
{% endblock %}

{% block toolbar %}
	<div class="dropdown">
        <button class="btn btn-default btn-sm dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Action
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_articletype_create') }}">
                    <i class="fas fa-plus-circle" aria-hidden="true"></i>
                    Ajouter
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('app_articletype_show', {slug: articleType.slug}) }}">
                    <i class="fas fa-book-reader"></i>
                    Consulter
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_articletype_show', {id: articleType.id}) }}">
                    <i class="fas fa-edit" aria-hidden="true"></i>
                    Afficher
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('admin_app_articletype_list') }}">
                    <i class="fas fa-list" aria-hidden="true"></i>
                    Retour à la liste
                </a>
            </li>
        </ul>
    </div>
{% endblock %}

{% block body %}
	<div class="card border-top-primary">
        {{ form_start(form) }}
            <div class="card-header">
                <h2 class="card-title h5 mb-0">Type d'article</h2>
            </div>
            <div class="card-body">
                {{ form_row(form.title) }}
                <div class="mb-3">
                    {{ form_label(form.slug) }}
                    <div class="input-group">
                        {{ form_widget(form.slug) }}
                        <span 
                            class="input-group-text" 
                            data-action="slugify" 
                            data-target="#article_type_form_slug" 
                            role="btton" 
                            data-source="#article_type_form_title"
                            title="Générer">
                            <i class="fas fa-sync-alt"></i>
                        </span>
                    </div>
                    {{ form_help(form.slug) }}
                    {{ form_errors(form.slug) }}
                </div>
                {{ form_row(form.description) }}
                {{ form_row(form.icon) }}
            </div>
            <div class="card-footer">
                <button class="btn btn-success btn-sm" type="submit" name="btn_update_and_edit">
                    <i class="fas fa-save" aria-hidden="true"></i>
                    Mettre à jour
                </button>
                <button type="submit" class="btn btn-success btn-sm" name="btn_update_and_list">
                    <i class="fas fa-save"></i>
                    <i class="fas fa-list" aria-hidden="true"></i>
                    Mettre à jour et fermer
                </button>
                ou 
                {% include "Admin/components/_delete_modal.html.twig" with { element: articleType, path: 'admin_app_articletype_delete' } %}
                {{ form_rest(form) }}
            </div>
        {{ form_end(form) }}
	</div>
{% endblock %}
