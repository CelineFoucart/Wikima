{% extends 'admin_layout.html.twig' %}

{% block title %}Afficher "{{ scenario_category }}"{% endblock %}
{% block activeScenario %}active show{% endblock %}
{% block activeScenarioCategory %} active {% endblock %}
{% block page_title %}Afficher "{{ scenario_category }}"{% endblock %}

{% block toolbar %}
    <a class="btn btn-sm btn-default" href="{{ path('admin_app_scenario_category_create') }}" data-bs-toggle="tooltip" title="Ajouter">
        <i class="fas fa-plus-circle" aria-hidden="true"></i>
    </a>
    <a class="btn btn-sm btn-default" href="{{ path('admin_app_scenario_category_list') }}" data-bs-toggle="tooltip" title="Retour à la liste">
        <i class="fas fa-list" aria-hidden="true"></i>
    </a>
    <div class="btn-group">              
        <a href="{{ path('admin_app_scenario_category_show', {id: scenario_category.id}) }}" data-bs-toggle="tooltip" class="btn btn-sm btn-default" title="Afficher">
            <i class="fas fa-info-circle"></i>
        </a>
        <a href="{{ path('admin_app_scenario_category_edit', {id: scenario_category.id}) }}" data-bs-toggle="tooltip" class="btn btn-sm btn-default" title="Éditer">
            <i class="fas fa-pencil-alt" aria-hidden="true"></i>
        </a>
        {% include "Admin/components/_delete_modal.html.twig" with { element: scenario_category, path: 'admin_app_scenario_category_delete' } %}
    </div>
{% endblock %}

{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{ path('admin_app_scenario_category_list') }}" class="text-reset">Page</a>
	</li>
	<li class="breadcrumb-item active">Voir</li>
{% endblock %}

{% block body %}
    <div class="card border-top-primary">
        <div class="card-header bg-white">
            <h2 class="card-title h5 mb-0">Informations</h2>
        </div>
        <div class="card-body card-show">
            <table class="table table-striped mb-0">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ scenario_category.id }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ scenario_category.title }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ scenario_category.description|nl2br }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
