<div class="card border-top-primary">
    <div class="card-header">
        <div class="float-end">
            <a href="{{ path('admin_app_scenario_episode', {id: scenario.id}) }}" class="btn btn-primary btn-sm"  data-bs-toggle="tooltip" title="Gérer le scénario">
                <i class="fas fa-copy"></i> Gérer
            </a>
            <a href="{{ path('app_scenario_show', {slug: scenario.slug}) ~ '#episode' ~ episode.id }}" class="btn btn-primary btn-sm"  data-bs-toggle="tooltip" title="Consulter">
                <i class="fas fa-book-reader"></i> Consulter
            </a>
        </div>
        <h3 class="card-title h5 mb-0">{{ episode }}</h3>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            <div class="row">
                <div class="col-md-9">{{ form_row(form.title) }}</div>
                <div class="col-md-3">{{ form_row(form.color) }}</div>

                <div class="col-lg-6">{{ form_row(form.persons) }}</div>
                <div class="col-lg-6">{{ form_row(form.places) }}</div>
            </div>

            {{ form_rest(form) }}
            <button class="btn btn-success btn-sm" type="submit">
                <i class="fas fa-save" aria-hidden="true"></i>
                Enregistrer
            </button>
            <a href="{{ path('admin_app_scenario_episode', {id: scenario.id}) }}" class="btn btn-default btn-sm">
                <i class="fas fa-times" aria-hidden="true"></i>
                Annuler
            </a>
        {{ form_end(form) }}
    </div>
</div>
