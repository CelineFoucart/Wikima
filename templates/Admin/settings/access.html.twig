{% extends 'Admin/settings/base.html.twig' %}

{% block content %}
    <p>Sur cette page, vous allez pouvoir gérer les accès aux pages du site et définir les pages accessibles aux invités ou seulement aux membres du site.</p>
    <form action="" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="card shadow-sm border-top-primary">
                    <div class="card-header bg-white">
                        <h2 class="card-title h5 mb-0">Encyclopédie</h2>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped mb-0">
                            <thead>
                                <tr>
                                    <th>Page</th>
                                    <th>Non authentifié ?</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for key, title  in accessKeyWiki %}
                                    <tr>
                                        <td>{{ title }}</td>
                                        <td>
                                            <div class="form-check form-switch">
                                                <input 
                                                    class="form-check-input" 
                                                    id="{{ key }}" 
                                                    name="{{ key }}" 
                                                    type="checkbox" 
                                                    {{ key in publicAccess ? 'checked' : '' }}>
                                                <label class="sr-only" for="{{ key }}">Rendre accessible</label>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card shadow-sm border-top-primary mt-4">
                    <div class="card-header bg-white">
                        <h2 class="card-title h5 mb-0">Lieux</h2>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped mb-0">
                            <thead>
                                <tr>
                                    <th>Page</th>
                                    <th>Non authentifié ?</th>
                                </tr>
                            </thead>
