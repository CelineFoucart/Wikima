                                                    class="form-check-input" 
                                                    id="{{ key }}" 
                                                    name="{{ key }}" 
                                                    type="checkbox"
                                                    {{ key in publicAccess ? 'checked' : '' }}>
                                                <label class="sr-only" for="{{ key }}">Rendre accessible</label>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card shadow-sm border-top-primary mt-4">
                    <div class="card-header bg-white">
                        <h2 class="card-title h5 mb-0">Personnages</h2>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped mb-0">
                            <thead>
                                <tr>
                                    <th>Page</th>
                                    <th>Non authentifié ?</th>
                                </tr>
                            </thead>
