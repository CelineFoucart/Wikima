{% extends 'base.html.twig' %}

{% block title %}Index des scénarios | {{ app_name }}{% endblock %}

{% block body %}
    <section class="mt-5 container-fluid">
        <header class="text-center">
			<h2 class="h4">
				Liste des scénarios
			</h2>
			<p class="w-75 m-auto pt-3 lh-lg text-muted">Ici, vous pouvez explorer l'ensemble des scénarios publics disponibles sur le site ou les filtrer.</p>
		</header>

        <div class="row justify-content-between my-5">
			<div class="col-md-4 mt-3">
                {% include "components/layout/_advance_search_form.html.twig" with {index_path: 'app_scenario_index'} %}
            </div>
			<div class="col-md-8">
				<h3 class="border-bottom display-6 mb-2 mt-0">Tous les scénarios</h3>
                <p class="mb-4">
					{% set current = scenarios|length %}
					Affichage de <span class="fw-bold">{{ current }}</span>
					sur <span class="fw-bold">{{ scenarios.getTotalItemCount }}</span>
					scénario{{ scenarios.getTotalItemCount > 1 ? 's' : '' }}.
				</p>
                <div class="row gy-3">
					{% for scenario in scenarios %}
						<div class="col-md-6">
                            <article class="card shadow-sm h-100">
                                <div class="card-body">
                                    <h2 class="card-title h5 mb-3">
                                        {% if not scenario.public %}
                                            <i class="fas fa-lock" data-bs-toggle="tooltip" title="Privé (visible uniquement par les administrateurs et éditeurs)"></i>
                                        {% endif %}
                                        <a href="{{ path('app_scenario_show', {slug: scenario.slug}) }}" class="text-decoration-none">
                                            {{ scenario.title }}
                                        </a>
                                    </h2>
                                    <p class="card-text">{{ scenario.pitch|nl2br }}</p>
                                </div>
                                <div class="card-footer text-muted">
                                    <span>
                                        <i class="fas fa-calendar-alt me-1"></i>
                                        Le {{ scenario.createdAt|date(date_format) }}
                                    </span>
                                </div>
                            </article>
						</div>
					{% else %}
						<div class="col-12">
							<p class="alert alert-danger">Votre recherche n'a donné aucun résultat</p>
						</div>
					{% endfor %}
				</div>

                <div class="navigation">
					{{ knp_pagination_render(scenarios) }}
				</div>
            </div>
        </div>
	</section>
{% endblock %}

{% block javascripts %}
	{{ parent() }}

	<script src="{{ asset('assets/choicesjs/choices.min.js') }}"></script>
	<script>
		const elements = document.querySelectorAll('[data-choices]');
		elements.forEach(element => {
			const choices = new Choices(element, {
				removeItems: true,
				removeItemButton: true,
				allowHTML: false,
				noResultsText: 'Aucun résultat',
				noChoicesText: 'Aucun élément à choisir',
				itemSelectText: 'Cliquez pour choisir'
			});
		});

		document.querySelectorAll('[name="search_terms"]').forEach(element => {
			element.removeAttribute('name');
		});
	</script>
{% endblock %}